<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_notification"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/img_song"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_song"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="title_song"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/img_song"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_single_song"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="tv_single_song"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/img_song"
        app:layout_constraintTop_toBottomOf="@id/tv_title_song" />

    <ImageView
        android:id="@+id/img_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_clear_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_pauseOrplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_pause_24"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_clear"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>